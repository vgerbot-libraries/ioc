{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["esnext", "dom"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": true,
        "declaration": true,
        "outDir": "./dist",
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "types": [
            "reflect-metadata",
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": ["src"]
}
