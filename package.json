{
    "name": "rollup-jest-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "browser": "dist/index.umd.js",
    "distDir": "dist/",
    "library": "boilerplate",
    "types": "dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest",
        "debug": "cross-env NODE_ENV=test node --inspect-brk ./node_modules/.bin/jest",
        "postinstall": "husky install",
        "release": "standard-version",
        "commit": "commit",
        "lint": " eslint {src,build,__test__}/**/*.{ts,tsx}",
        "format": "eslint --fix {src,build,__test__}/**/*.{ts,tsx}",
        "build": "cross-env NODE_ENV=production rollup -c ./rollup.config.js",
        "gendoc": "typedoc ./src  --out dist/docs --name rollup-jest-boilerplate --hideGenerator"
    },
    "lint-staged": {
        "{src,test}/**/*.{js,ts,tsx}": [
            "npm run format",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vgerbot-libraries/ioc.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@commitlint/prompt-cli": "^17.1.2",
        "@rollup/plugin-commonjs": "^22.0.2",
        "@rollup/plugin-node-resolve": "^14.1.0",
        "@types/jest": "^29.1.1",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "codecov": "*",
        "cross-env": "^7.0.3",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "8.0.1",
        "istanbul-lib-report": "^3.0.0",
        "istanbul-lib-source-maps": "^4.0.1",
        "istanbul-reports": "^3.1.5",
        "jest": "^29.1.2",
        "jest-html-reporter": "^3.7.0",
        "lint-staged": "13.0.3",
        "prettier": "^2.7.1",
        "rollup": "^2.79.1",
        "rollup-jest": "^2.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.34.0",
        "sucrase": "^3.27.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.0",
        "typedoc": "^0.23.15",
        "typescript": "^4.8.4",
        "zx": "^4.3.0"
